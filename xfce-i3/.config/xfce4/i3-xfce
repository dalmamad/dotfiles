set $darkbluetrans	#08052b
set $darkblue		#08052b
set $lightblue		#5294e2
set $urgentred		#e53935
set $purple		#e345ff
set $darkgrey		#383c4a
set $mediumgrey		#8b8b8b
set $yellowbrown	#e1b700
set $bg-color #2f343f
set $inactive-bg-color #2A2A2A 
set $text-color #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color #E53935
set $grey #A2A2A2
set $white #ffffff
set $black #000000
set $dark-blue #1C639A
set $light-blue #5482d6

# define colors for windows:
client.focused  $bg-color $light-blue $text-color $dark-blue
client.unfocused  $inactive-bg-color $inactive-bg-color $white $grey
client.focused_inactive  $inactive-bg-color $inactive-bg-color $inactive-text-color $grey 
client.urgent  $urgent-bg-color $urgent-bg-color $text-color $grey 




